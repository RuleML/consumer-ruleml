<?xml-model href="http://reaction.ruleml.org/1.03/relaxng/dr/dr-nafneghornlogeq_relaxed.rnc" type="application/relax-ng-compact-syntax"?>
<RuleML xmlns="http://ruleml.org/spec" xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://ruleml.org/spec http://reaction.ruleml.org/1.03/xsd/dr.xsd">

  <!-- Clocksin/Mellish sample rule 

This example shows if then else rules

-->

  <!-- assert knowledge -->

  <Assert>

    <!-- if then else rule; 
	note: this is a shortcut for the two rules "if condition then conclusion" and "if neg condition then else conclusion"
  -->

    <Rule>
      <if>
        <Atom>
          <op>
            <Rel>likes</Rel>
          </op>
          <Var>X</Var>
          <Ind>wine</Ind>
        </Atom>
      </if>
      <then>
        <Atom>
          <op>
            <Rel>likes</Rel>
          </op>
          <Ind>John</Ind>
          <Var>X</Var>
        </Atom>
      </then>
      <else>
        <!-- if the condition fails then derive else conclusion -->
        <Neg>
          <Atom>
            <op>
              <Rel>likes</Rel>
            </op>
            <Ind>John</Ind>
            <Var>X</Var>
          </Atom>
        </Neg>
      </else>
    </Rule>

    <!-- fact -->

    <Atom>
      <op>
        <Rel>likes</Rel>
      </op>
      <Ind>Mary</Ind>
      <Ind>wine</Ind>
    </Atom>

  </Assert>

  <!-- query knowledge base -->

  <Query>
    <Atom>
      <Rel>likes</Rel>
      <Ind>John</Ind>
      <Var>whom</Var>
    </Atom>
  </Query>


  <Query>
    <Neg>
      <Atom>
        <Rel>likes</Rel>
        <Ind>John</Ind>
        <Var>whom</Var>
      </Atom>
    </Neg>
  </Query>


</RuleML>
