<?xml-model href="../../../relaxng/drivers/consumer-reaction.rnc" type="application/relax-ng-compact-syntax"?>
<Rule xmlns="http://ruleml.org/spec" xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dc="http://purl.org/dc/elements/1.1"
  xmlns:owltime="http://www.w3.org/2006/time"
  xmlns:this="http://consumer.ruleml.org/exa/consumer-reaction/TemporalExample2#"
  xmlns:ex="http://reaction.ruleml.org/exa/dr/TemporalExample2#"
  material="yes" closure="universal">
  <if>
    <!-- rule body using different times-->
    <And>

      <!-- time -->
      <formula>
        <Time>
          <arg>
            <Ind>t1</Ind>
          </arg>
        </Time>
      </formula>
      <formula>
        <Time>
          <arg>
            <Var>x</Var>
          </arg>
        </Time>
      </formula>
      <formula>
        <Time key="this:time1">
          <arg>
            <Data xsi:type="xs:dateTime">2011-03-21T10:00:00-04:00</Data>
          </arg>
        </Time>
      </formula>
      <formula>
        <Time>
          <!--  slotted -->
          <slot>
            <Ind>year</Ind>
            <Var>Y</Var>
          </slot>
          <slot>
            <Ind>month</Ind>
            <Var>M</Var>
          </slot>
          <slot>
            <Ind>day</Ind>
            <Var>D</Var>
          </slot>
        </Time>
      </formula>
      <formula>
        <Time>
          <!-- frame representation -->
          <oid>
            <Var type="ex:DatetimeClass1">X</Var>
          </oid>
          <slot>
            <Ind>date</Ind>
            <Var>Date</Var>
          </slot>
          <slot>
            <Ind>time</Ind>
            <Var>Time</Var>
          </slot>
        </Time>
      </formula>
      <formula>
        <Time>
          <!-- frame representation -->
          <oid>
            <Ind type="ex:DatetimeClass2">datetime2</Ind>
          </oid>
          <slot>
            <Ind>datetime</Ind>
            <Var>DT</Var>
          </slot>
        </Time>
      </formula>
      <formula>
        <Time>
          <!-- frame representation -->
          <oid>
            <Ind type="ex:TimeIntervalClass">interval1</Ind>
          </oid>
          <slot>
            <Ind>start</Ind>
            <Time>
              <arg>
                <Var>T1</Var>
              </arg>
            </Time>
          </slot>
          <slot>
            <Ind>end</Ind>
            <Time>
              <arg>
                <Var>T2</Var>
              </arg>
            </Time>
          </slot>
        </Time>
      </formula>
      <formula>
        <Time>
          <!-- after(2 years) -> Y -->
          <slot>
            <Time>
              <arg>
                <After>
                  <arg>
                    <Data xsi:type="xs:duration">P2Y</Data>
                  </arg>
                </After>
              </arg>
            </Time>
            <Var>Y</Var>
          </slot>
        </Time>
      </formula>
      <formula>
        <Time keyref="this:time1"/>
      </formula>
      <formula>
        <Time>
          <content index="1">
            <!-- xs:any content -->
            <owltime:inXSDDateTime>2003-01-09T12:39:09Z</owltime:inXSDDateTime>
          </content>
        </Time>
      </formula>
      <formula>
        <Atom>
          <op>
            <Rel iri="dc:date"/>
          </op>
          <!-- Dublin Core date -->
          <arg index="1">
            <Time>
              <arg>
                <Data xsi:type="xs:dateTime">2011-03-21T10:00:00-04:00</Data>
              </arg>
            </Time>
          </arg>
        </Atom>
      </formula>

      <!-- interval -->
      <formula>
        <Interval>
          <arg index="1">
            <Time>
              <arg>
                <Ind>t1</Ind>
              </arg>
            </Time>
          </arg>
          <arg index="2">
            <Time>
              <arg>
                <Ind>t2</Ind>
              </arg>
            </Time>
          </arg>
        </Interval>
      </formula>
      <formula>
        <Interval>
          <arg index="1">
            <Var>Y</Var>
          </arg>
        </Interval>
      </formula>
      <formula>
        <Interval>
          <arg index="1">
            <Time>
              <arg>
                <Var>Y1</Var>
              </arg>
            </Time>
          </arg>
          <arg index="2">
            <Time>
              <arg>
                <Var>Y2</Var>
              </arg>
            </Time>
          </arg>
        </Interval>
      </formula>

      <!-- different interval algebra definitions -->

      <!-- [t2,t3] during [t1,4] -->
      <formula>
            <During>
              <arg index="1">
                <Interval>
                  <arg index="1">
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t3</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
              <arg index="2">
                <Interval>
                  <arg index="1">
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t4</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
            </During>
      </formula>

      <!-- [t1,t3] overlaps with [t2,t4] -->
      <formula>
            <Overlaps>
              <arg index="1">
                <Interval>
                  <arg index="1">
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t3</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
              <arg index="2">
                <Interval>
                  <arg index="1">
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t4</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
            </Overlaps>
      </formula>

      <!-- [t1,t2] starts [t1,t4] -->
      <formula>
            <Starts>
              <arg index="1">
                <Interval>
                  <arg index="1">
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
              <arg index="2">
                <Interval>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t4</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
            </Starts>
      </formula>

      <!-- [t1,t2] precedes [t3,t4] -->
      <formula>
            <Precedes>
              <arg index="1">
                <Interval>
                  <arg index="1">
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
              <arg index="2">
                <Interval>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t3</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg index="2">
                    <Time>
                      <arg>
                        <Ind>t4</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
            </Precedes>
      </formula>

      <!-- [t3,t4] succeeds [t1,t2] -->
      <formula>
            <Succeeds>
              <arg>
                <Interval>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
              <arg>
                <Interval>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t3</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t4</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
            </Succeeds>
      </formula>

      <!-- [t1,t2] meets [t2,t4] -->
      <formula>
            <Meets>
              <arg>
                <Interval>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
              <arg>
                <Interval>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t4</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
            </Meets>
      </formula>

      <!-- [t1,t2] equals [t1,t2] -->
      <formula>
            <Equal type="rulemm:AllenOperator" style=":deep-equality">
              <left>
                <Interval>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </left>
              <right>
                <Interval>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t2</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </right>
            </Equal>
      </formula>

      <!-- [t1,t4] finishes [t3,t4] -->
      <formula>
            <Finishes>
              <arg>
                <Interval>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t1</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t4</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
              <arg>
                <Interval>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t3</Ind>
                      </arg>
                    </Time>
                  </arg>
                  <arg>
                    <Time>
                      <arg>
                        <Ind>t4</Ind>
                      </arg>
                    </Time>
                  </arg>
                </Interval>
              </arg>
            </Finishes>
      </formula>


    </And>
  </if>
  <then>
    <!-- rule head -->
    <Time>
      <arg>
        <Ind>t2</Ind>
      </arg>
    </Time>
  </then>
</Rule>
