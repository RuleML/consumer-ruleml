  <!-- dc:description [ 'Transformation to enforce sequential values of @index on content edges.' ] -->
  
  <xsl:template match="ruleml:content">
    <xsl:copy>
      <xsl:apply-templates select="@*[not(index)]"/>
      <xsl:attribute name="index" select="position()"/>
      <xsl:apply-templates select="node()"/>
    </xsl:copy>
  </xsl:template>
  <!-- Copies everything else to the transformation output -->
  <xsl:template match="@*|node()">
    <xsl:copy>
      <xsl:apply-templates select="@*|node()"/>
    </xsl:copy>
  </xsl:template>
  
</xsl:stylesheet>
